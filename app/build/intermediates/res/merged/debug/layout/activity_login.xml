<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mikhal.wiseatapp.Login">


    <ImageView
        android:id="@+id/appLogo_imageView"
        android:layout_width="365dp"
        android:layout_height="369dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/app_logo" />

    <TextView
        android:id="@+id/welcome_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/appLogo_imageView"
        android:layout_below="@id/appLogo_imageView"
        android:layout_above="@+id/btnGoogle"
        android:layout_alignParentStart="true"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/welcome"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="284dp"
        android:layout_height="67dp"
        android:layout_above="@+id/cpyRights_textView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_gg_btn"
        android:fontFamily="casual"
        android:padding="10dp"
        android:layout_marginBottom="70dp"
        android:text="@string/ggl_login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/gglLogo_imageView"
        android:layout_width="56dp"
        android:layout_height="69dp"
        android:contentDescription="@string/ggl_login"
        android:elevation="3dp"
        android:src="@drawable/ggl_login"
        android:layout_alignBottom="@+id/btnGoogle"
        android:layout_alignStart="@+id/btnGoogle"/>

    <TextView
        android:id="@+id/cpyRights_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/appLogo_imageView"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/cpyRights"
        android:textAlignment="center" />
</RelativeLayout>

