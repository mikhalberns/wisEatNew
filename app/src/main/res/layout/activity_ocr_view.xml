<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mikhal.wiseatapp.OcrView">

    <Button
        android:id="@+id/backB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:text="back" />

    <Button
        android:id="@+id/picBtn"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/focus_btn"
        android:fontFamily="casual"
        android:text="@string/pic_take"
        android:textAlignment="center"
        android:textAllCaps="false" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="270dp"
        android:layout_height="253dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/resB"
        android:layout_marginTop="151dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/rotateB"
        android:layout_marginBottom="207dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/identify_btn"
        android:fontFamily="casual"
        android:text="@string/identify"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rotateB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginStart="12dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/rotate_btn"
        android:fontFamily="casual"
        android:text="@string/rotate"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="369dp"
        android:layout_height="84dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp">

        <TextView
            android:id="@+id/resText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:gravity="center"
            android:textAllCaps="false" />
    </ScrollView>

    <Button
        android:id="@+id/resB"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/check_btn"
        android:fontFamily="casual"
        android:text="@string/check_prod"
        android:textAllCaps="false"
        android:textColor="@color/check"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>