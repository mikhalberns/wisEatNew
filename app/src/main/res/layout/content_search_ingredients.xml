<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SearchIngredients"
    tools:showIn="@layout/activity_search_ingredients" >

    <TextView
        android:id="@+id/searchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="110dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Please search your ingredients"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="79dp" />

    <SearchView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchTitle"
        android:layout_marginStart="36dp"
        android:layout_marginTop="86dp"

        android:visibility="visible" />

    <TextView
        android:id="@+id/searchComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/relativeLayout1"
        android:layout_centerVertical="true"
        android:fontFamily="casual"
        android:gravity="center"
        android:text='Use , to seperate a list of ingredients '
        android:textAlignment="center" />


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="153dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp">


        <Button
            android:id="@+id/btnSearch"
            android:layout_width="153dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corner_check"
            android:fontFamily="casual"
            android:padding="10dp"
            android:text="@string/check_prod"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light" />

    </RelativeLayout>


</RelativeLayout>