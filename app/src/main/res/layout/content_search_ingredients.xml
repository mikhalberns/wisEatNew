<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SearchIngredients"
    tools:showIn="@layout/activity_search_ingredients">

    <TextView
        android:id="@+id/searchTitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/pls_search"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:textStyle="bold" />

    <SearchView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchTitle"
        android:layout_marginStart="36dp"
        android:layout_marginTop="86dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/searchComment"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text='@string/instructions'
        android:textAlignment="center" />


    <Button
        android:id="@+id/btnSearch"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/check_btn"
        android:fontFamily="casual"
        android:paddingBottom="75dp"
        android:text="@string/check_prod"
        android:textAllCaps="false"
        android:textColor="@color/check"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>